<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CustomApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CustomApp.Controls.Pages"
    xmlns:views="clr-namespace:CustomApp.Controls.Views"
    FlyoutBackgroundColor="LightBlue"
    FlyoutBehavior="Locked"
    Title="CustomApp">

    <Shell.FlyoutHeader>
        <views:ShellFlyoutHeader />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calculator" Icon="user.png" Route="calculator">
        <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Users" Icon="user.png" Route="users">
        <ShellContent ContentTemplate="{DataTemplate pages:UsersPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Issues" Icon="issue.png" Route="issues">
        <ShellContent ContentTemplate="{DataTemplate pages:IssuesPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <views:ShellFlyoutFooter />
    </Shell.FlyoutFooter>

</Shell>
